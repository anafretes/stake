    <%= form.label :measurement_type, style: "display: block" %>
    <%= form.text_field :measurement_type, class:"input input-bordered w-full max-w-xs" %>
  </div>

  <div>
    <%= form.label :date, style: "display: block" %>
    <%= form.date_field :date, value: @date_today, class:"input input-bordered w-full max-w-xs" %>
  </div>

  <div>
    <%= form.submit %>
  </div>
